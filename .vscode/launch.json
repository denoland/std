  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Program",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "~/.deno/bin/deno",
      "runtimeArgs": ["task", "watch", "--inspect-wait", "${relativeFile}"],
      "attachSimplePort": 9229,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
